{
  "ignoreFiles": [],
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/properties-alphabetical-order": true,
    "number-leading-zero": "never",
    "at-rule-empty-line-before": ["always", {
      "ignore": [
        "after-comment",
        "inside-block",
        "blockless-after-same-name-blockless",
        "blockless-after-blockless"
      ]
    }]
  }
}
